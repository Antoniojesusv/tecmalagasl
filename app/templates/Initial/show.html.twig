{% extends 'base.html.twig' %}

{% block title %}Mostrar producto
{% endblock %}

{% block body %}{% endblock %}

{% set path = "{{ path('initial') }}" %}

{% block main %}
	<section class="col-10 row show-section">
		<div class="col-12 col-lg-5 margin-bottom-three">
			<div>
				{% if product.images is empty %}
					<img src="{{ asset('images/' ~ "no_image.jpg") }}" alt="Sheep">
				{% else %}
					<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
						<div class="carousel-inner">
							{% for image in product.images %}
								{% if loop.index-1 == 0 %}
									<div class="carousel-item active">
										<img class="d-block w-100" src="{{ asset('images/' ~ image.fileName) }}" alt="">
									</div>
								{% else %}
									<div class="carousel-item">
										<img class="d-block w-100" src="{{ asset('images/' ~ image.fileName) }}" alt="">
									</div>
								{% endif %}
							{% endfor %}
						</div>
						<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				{% endif %}
			</div>
		</div>
		<div class="col-12 col-lg-5">
			<h2>{{ product.name }}</h2>
			<p class="price">{{ product.price }}
				€</p>
			<h5>Descripción</h5>
			<p>{{ product.description }}</p>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Características</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for id, characteristic in product.characteristic %}
						<tr>
							<td>{{characteristic.name}}</td>
							<td>{{characteristic.value}}</td>
						</tr>
					{% endfor %}
				</tbody>
			</tbody>
		</table>
		<a href="{{ path('initial') ~ "#productos" }}">
			<button type="button" class="btn btn-success">
				Volver atras</button>
		</a>
	</div>
</section>{% endblock %}

{% extends "components/modal/modal.html.twig" %}

{% set modalId = id %}

{% block modalHeader %}
    <h5 class="modal-title" id="addModalLabel">{{ title }}</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
{% endblock %}

{% block modalBody %}
    {% if text.id is defined %}
        {{ render(controller(pathToController, {'id': text.id})) }}
    {% else %}
        {{ render(controller(pathToController)) }}
    {% endif %}
{% endblock %}
